<beans xmlns="http://www.springframework.org/schema/beans" xmlns:p="http://www.springframework.org/schema/p"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
	   default-autowire="no" default-lazy-init="true">

	<!-- 数据源配置 dbcp -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${bosinone.jdbc.driverClassName}"/>
		<property name="url" value="jdbc:mysql://${bosinone.jdbc.address}?useUnicode=true&amp;characterEncoding=utf-8&amp;zeroDateTimeBehavior=convertToNull"/>
		<property name="username" value="${bosinone.jdbc.bosinonename}"/>
		<property name="password" value="${bosinone.jdbc.password}"/>
		<!-- Connection Pooling Info -->
		<property name="initialSize" value="${bosinone.cpool.initialSize}" />
		<property name="maxActive" value="${bosinone.cpool.maxActive}" />
		<property name="maxIdle" value="${bosinone.cpool.maxIdle}" />
		<property name="maxWait" value="${bosinone.cpool.maxWait}" />
		<property name="poolPreparedStatements" value="${bosinone.cpool.poolPreparedStatements}" />
		<property name="defaultAutoCommit" value="${bosinone.cpool.defaultAutoCommit}" />
		<property name="timeBetweenEvictionRunsMillis" value="${bosinone.cpool.timeBetweenEvictionRunsMillis}"/>
		<property name="minEvictableIdleTimeMillis" value="${bosinone.cpool.minEvictableIdleTimeMillis}"/>
		<property name="validationQuery">
			<value>select 1 from dual</value>
		</property>
	</bean>

</beans>